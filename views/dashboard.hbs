<h6>DashBoard</h6>
<h3>Welcome {{name}}</h3>
{{#if stories}}
    <p>Here are your stories</p>
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                    <td>{{formatDate createdAt}}</td>
                    <td><spa class="dash-status">{{status}}</spa></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories</p>
{{/if}}